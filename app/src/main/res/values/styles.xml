<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">78dp</item>
        <item name="android:layout_height">78dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="cornerRadius">178dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Grey.Button" parent="Base.Button">
        <item name="backgroundTint">@color/grey</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Orenge.Button" parent="Base.Button">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Gray.Dark.Button" parent="Base.Button">
        <item name="backgroundTint">@color/grey_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>